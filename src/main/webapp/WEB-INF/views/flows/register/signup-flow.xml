<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">


	<var name="user" class="com.grow.agriculture.dto.User"/>


	<view-state id="farmerRegister" view="flows/register/farmer-register" model="user">
	
	<transition on="login" to="login"/>
	
	</view-state>
	
	
	<view-state id="login" view="flows/login/farmer-login" model="user"></view-state>
	

	<end-state id="home" view="externalRedirect:contextRelative:/" />
	
	<global-transitions>

		<transition on="home" to="home" />

	</global-transitions>


</flow>
		